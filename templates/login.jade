html(lang='en')
	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width')
		link(rel='stylesheet', href='/css/normalize.css')
		link(rel='stylesheet', href='/css/foundation.min.css') 
		link(rel='stylesheet', href='/css/app.css')
		link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Noto+Sans|Ubuntu', type='text/css')
		script(src='/js/vendor/jquery.js')
		script(src='/js/supplied/knockout-3.0.0.js')
		script(src='/js/login.js')
	body
		.row(data-bind='css: {hide: showProgress()}')
			.small-12.columns
				h3= locals.name
				hr
		.row(data-bind='css: {hide: showProgress()}')
			.small-12.columns
				p 
					span In order to view or update your submitted tickets, please log in with your 
					span= locals.login_location 
					span  account.
				a.button.radius(data-bind='click: login') Log in

		.row.hide(data-bind='css: {hide: !showProgress()}')
			.small-2.columns.small-centered
				p
				img(src='/images/progress.gif')
				h4 Logging in...
