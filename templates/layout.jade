!!! 5
html.no-js(lang='en')
	head
		title
			block title
				= locals.name
		block head
			meta(charset='utf-8')
			meta(name='viewport', content='width=device-width, initial-scale=1.0')
			link(rel='stylesheet', href='/css/normalize.css')
			link(rel='stylesheet', href='/css/foundation.min.css') 
			link(rel='stylesheet', href='/css/app.css')
			link(rel='stylesheet' type='text/css', href='https://fonts.googleapis.com/css?family=Noto+Sans|Raleway:300')

			script(src='/js/vendor/jquery.js')
			script(src='/js/vendor/modernizr.js')
			script(src='/js/supplied/knockout-3.0.0.js')
			script(src='/js/supplied/async.js')
			script(src='/js/supplied/moment.min.js')
			script(src='/js/supplied/jquery.cookie.js')
			script(src='/js/supplied/iconic.min.js')
			script(src='/node/socket.io/socket.io.js')
			script(src='/js/init.js')
			link(rel='shortcut icon', href='/favicon.ico', sizes='256x256')

	body
		block header
			.row
				nav.top-bar(data-topbar='data-topbar')
						ul.title-area
							li.name
								h1
									a(href=locals.url)= locals.name
							li.toggle-topbar.menu-icon
								a(href='')
							section.top-bar-section
								ul.right
									li.divider.hide(data-bind='css: {hide: !(isAdmin() || isTech())}')
									li.hide(data-bind='css: {hide: !(isAdmin() || isTech())}')
										a(href='/manage/')
											span.titleicon
												img.iconic.iconic-sm(style='vertical-align:middle; width: 16px; height: 16px;', src='/iconic/list.svg')
											span Manage
									each item in locals.nav
										li.divider
										li
											a(href=item.url)
												span.titleicon
													img.iconic.iconic-sm(style='vertical-align:middle; width: 16px; height: 16px;', src='/iconic/'+item.icon)
												span= item.name
		block content

		block footer
			.row
				.large-12.columns
					hr

			script(src='/js/foundation.min.js')
