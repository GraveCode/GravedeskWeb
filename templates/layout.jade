!!! 5
html(lang='en', class='no-js')
	head
		title
			block title
				= locals.name
		block head
			meta(charset='utf-8')
			meta(name='viewport', content='width=device-width, initial-scale=1.0')
			link(rel='stylesheet', href='/css/normalize.css')
			link(rel='stylesheet', href='/css/foundation.min.css') 
			link(rel='stylesheet', href='/css/app.css')
			link(rel='stylesheet', href='/css/iconic_stroke.css')  
			link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Noto+Sans:400,700,400italic', type='text/css')
			script(src='/js/vendor/modernizr.js')
			script(src='/js/vendor/jquery.js')
			script(src='/js/supplied/knockout-3.0.0.js')
			script(src='/js/supplied/async.js')
			script(src='/js/supplied/moment.min.js')
			script(src='/js/supplied/jquery.cookie.js')
			script(src='/node/socket.io/socket.io.js')
			script(src='/js/init.js')
			link(rel='shortcut icon', href='/favicon.ico', sizes='256x256')
	body
		block header
			.row
				nav.top-bar(data-topbar='data-topbar')
						ul.title-area
							li.name
								h1
									a(href=locals.url)= locals.name
								li.toggle-topbar.menu-icon
									a(href='')
										span Menu
							section.top-bar-section
								ul.right
									li.divider.hide-for-small.hide
									li.hide(data-bind='if: (isAdmin() || isTech()), css: {hide: !(isAdmin() || isTech())}')
										a(href='/manage/')
											span.iconic(class='cloud')
											span Manage
									each item in locals.nav
										li.divider.hide-for-small
										li
											a(href=item.url)
												span.iconic(class=item.icon)
												span= item.name
		block content

		block footer
			.row
				.large-12.columns
					hr

			script(src='/js/vendor/custom.modernizr.js')
			script(src='/js/foundation.min.js')
