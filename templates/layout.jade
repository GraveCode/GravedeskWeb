!!! 5
html(lang='en')
	head
		meta(charset='utf-8')
		title
			block title
				= locals.name
		block head
			meta(name='viewport', content='width=device-width')
			link(rel='stylesheet', href='/css/normalize.css')
			link(rel='stylesheet', href='/css/foundation.min.css') 
			link(rel='stylesheet', href='/css/app.css')
			link(rel='stylesheet', href='/css/iconic_stroke.css')  
			link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Noto+Sans|Ubuntu', type='text/css')
			script(src='/js/vendor/jquery.js')
			script(src='/js/vendor/knockout-3.0.0.js')
			script(src='/js/vendor/async.js')
			script(src='/node/socket.io/socket.io.js')
			script(src='/js/init.js')
	body
		block header
			.row
				nav.top-bar(data-topbar='data-topbar')
						ul.title-area
							li.name
								h1
									a(href=locals.url)= locals.name
								li.toggle-topbar.menu-icon
									a(href='')
										span Menu
							section.top-bar-section
								ul.right
									li.divider.hide-for-small.hide
									li.hide(data-bind='if: isAdmin, fadeVisible: isAdmin()')
										a(href='/manage/')
											span.iconic(class='cloud')
											span Manage
									each item in locals.nav
										li.divider.hide-for-small
										li
											a(href=item.url)
												span.iconic(class=item.icon)
												span= item.name
		block content

		block footer
			.row
				.large-12.columns
					hr

			script(src='/js/vendor/custom.modernizr.js')
			script(src='/js/foundation.min.js')
